{% extends "base.twig" %}

{% block header %}<h1>Register and Control your House!</h1>{% endblock %}

{% block content %}
<div class="bs-docs-section" role="main">
    {% if errors is defined and errors is not empty %}
        <div class="row">
            <div class="col-lg-12">
                <div class="alert alert-dismissable alert-danger">
                    {% for error in errors %}
                        <p>{{ error }}</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}

    <div class="row">
        <form class="bs-example form-horizontal" action="{{ path('user_register') }}" method="post">
            <fieldset>
                <div class="form-group">
                    <label for="form-email" class="col-lg-2 control-label">Email</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="form-email" name="email" placeholder="foo@example.com" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="form-password" class="col-lg-2 control-label">Password</label>
                    <div class="col-lg-10">
                        <input type="password" class="form-control" id="form-password" name="password" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="form-address" class="col-lg-2 control-label">Address</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="form-address" name="address" placeholder="555 Main Street, Nashville TN" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="form-first-name" class="col-lg-2 control-label">First Name</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="form-first-name" name="first_name" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="form-last-name" class="col-lg-2 control-label">Last Name</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="form-last-name" name="last_name" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <a class="btn btn-default" href="{{ path('home') }}">Cancel</a>
                        <button type="submit" class="btn btn-primary">Do it!</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
<div>
{% endblock %}
