<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">

    <link rel="stylesheet" href="{{ app.request.basePath }}/css/bootstrap.min.css" />
    <link rel="stylesheet" href="{{ app.request.basePath }}/css/coop.css" />
</head>
<body>
    <!--[if lt IE 7]>
    <p class="chromeframe">You are using an outdated browser. <a href="http://browsehappy.com/">Upgrade your browser today</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to better experience this site.</p>
    <![endif]-->

    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="{{ path('home') }}" class="navbar-brand">The COOP</a>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav navbar-right">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li><a href="{{ path('user_logout') }}">Logout</a></li>
                    {% else %}
                        <li><a href="{{ path('user_register') }}">Register</a></li>
                        <li><a href="{{ path('user_login') }}">Login</a></li>
                    {% endif %}
                    <li><a href="{{ path('api_home') }}">API</a></li>
                    <li><a href="http://builtwithbootstrap.com/" target="_blank">Built With Bootstrap</a></li>
                    <li><a href="http://bootswatch.com/amelia/" target="_blank">BootsWatch</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="page-header">
            {% block header %}
            <h2>
                Welcome to <span class="label label-primary">The COOP</span>!
            </h2>
            <p>
                The <span class="text-primary">C</span>hicken <span class="text-primary">O</span>versight <span class="text-primary">O</span>perations <span class="text-primary">P</span>latform</small>
            </p>
            {% endblock %}
        </div>

        {% block content %}
        {% endblock %}
    </div>

    <script src="http://code.jquery.com/jquery-2.0.3.min.js"></script>
    <script src="{{ app.request.basePath }}/js/bootstrap.min.js"></script>
